<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>vote</display-name>

    <servlet>
        <servlet-name>userVoteServlet</servlet-name>
        <servlet-class>ru.yakubov.vote.web.UserVoteServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>userVoteServlet</servlet-name>
        <url-pattern>/users</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>restaurantServlet</servlet-name>
        <servlet-class>ru.yakubov.vote.web.RestaurantServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>restaurantServlet</servlet-name>
        <url-pattern>/restaurants</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>menuVoteServlet</servlet-name>
        <servlet-class>ru.yakubov.vote.web.MenuVoteServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>menuVoteServlet</servlet-name>
        <url-pattern>/menu</url-pattern>
    </servlet-mapping>

</web-app>
